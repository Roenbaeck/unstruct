block = { "{" ~ (directive | block)* ~ "}" }

// tokens
COMMENT = _{ "#" ~ (!"\n" ~ ANY)*  }
WHITESPACE = _{ " " | "\t" | "\r" | "\n" }

digit = _{ '0'..'9' }
column_name = ${ CASED_LETTER ~ (CASED_LETTER | digit | "_" )* }
xml_name = { "\"" ~ ( "\"\"" | (!"\"" ~ ANY) )* ~ "\"" }

directive = { column_name ~ "=" ~ xml_name }
